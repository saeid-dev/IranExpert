@model  IEnumerable<IranExpert.Dto.ProfileSearchDto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Home.cshtml";
}

<div class="col-lg-12 mb-1">
    <div class="card shadow border-bottom-info mb-5">
        <div class="card-header py-4">
            <h6 class="m-0 font-weight-bold text-primary">کاربران سایت ( جستجوی پیشرفته بر اساس نام ، نام شهر ، نام دانشگاه ، وضعیت و سطح تحصیلی )</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="profile" class="table table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th width="200px">نام و نام خانوادگی</th>
                            <th>کشور</th>
                            <th>شهر</th>
                            <th>وضعیت</th>
                            <th width="150px">سطح تحصیلی</th>
                            <th>دانشگاه</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        var api_url = "/api/profiles";
        $(document).ready(function () {
            var table = $("#profile").DataTable({
                ajax: {
                    url: api_url,
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "FullName"
                    },
                    {
                        data: "Country.Name"
                    },
                    {
                        data: "City.Name"
                    },
                    {
                        data: "Status.Name"
                    },
                    {
                        data: "Degree.Titel"
                    },
                    {
                        data: "University.Name"
                    }
                ]
            });
        });
    </script>
}
